{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/MD",
                "/std:c++17",
                "/LD",
                "/I",
                "D:/pybind11/include",
                "/I",
                "D:/ANACONDA/include",
                "/I",
                "D:/ZRDDS/ZRDDS-2.4.4/include/ZRDDSCoreInterface",
                "/I",
                "D:/ZRDDS/ZRDDS-2.4.4/include/CPlusPlusInterface",
                "/link",
                "/LIBPATH:D:/ANACONDA/libs",
                "/LIBPATH:D:/ZRDDS/ZRDDS-2.4.4/lib",
                "python3.lib",
                "python312.lib",
                "ZRDDSCppzd_VS2019.lib",
                "/OUT:dds_bindings.pyd",
                "${workspaceFolder}/src/main.cpp"
            ],
            "group": "build",
            "detail": "编译 pybind11 扩展模块"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}